@model List<CouponModel>

@{
    ViewBag.Title = "Coupons";
}

<table class="table table-striped table-bordered table-hover" id="dataTable" style="width:100%">
    <thead>
    <th>Id</th>
    <th>User</th>
    <th>Amount</th>
    <th>Played Date</th>
    </thead>
    <tbody>
    @foreach (var coupon in Model)
    {
        <tr>
            <td>@coupon.CouponId</td>
            <td>@coupon.User</td>
            <td>@coupon.Amount</td>
            <td>@coupon.PlayedDate.ToString("d")</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function (){
            $('#dataTable').DataTable({
                "pageLenght": 25
            });
        });
    </script>
}